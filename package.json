{
  "name": "koa-ts",
  "version": "1.0.0",
  "description": "Simple Koa applicaiton with Typescript",
  "repository": {
    "type": "public",
    "url": "https://github.com/kishanmundha/koa-ts.git"
  },
  "main": "index.js",
  "scripts": {
    "start": "nodemon --watch 'src/**/*' -e ts --exec ./node_modules/.bin/ts-node ./src/server.ts",
    "serve": "DEBUG=app:* ./node_modules/.bin/ts-node ./src/server.ts",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "mocha": "mocha --require ts-node/register",
    "test": "nyc mocha --require ts-node/register 'test/**/*.spec.ts'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "config": "3.3.8",
    "debug": "3.1.0",
    "jsonwebtoken": "^8.5.0",
    "koa": "2.5.1",
    "koa-bodyparser": "^4.2.0",
    "koa-compose": "^4.0.0",
    "koa-mount": "^3.0.0",
    "koa-router": "7.4.0",
    "mongoose": "^5.7.5"
  },
  "devDependencies": {
    "@types/chai": "4.1.3",
    "@types/config": "0.0.34",
    "@types/debug": "0.0.30",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/koa": "2.0.45",
    "@types/koa-bodyparser": "4.2.0",
    "@types/koa-compose": "3.2.2",
    "@types/koa-mount": "3.0.1",
    "@types/koa-router": "7.0.28",
    "@types/mocha": "5.2.0",
    "@types/mongoose": "^5.0.13",
    "chai": "4.1.2",
    "mocha": "5.1.1",
    "nodemon": "1.17.4",
    "nyc": "^13.3.0",
    "proxyrequire": "1.0.21",
    "ts-node": "6.0.3",
    "tslint": "5.10.0",
    "typescript": "2.8.3"
  }
}
