  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Server",
      "args": [
        "--require",
        "ts-node/register",
        "src/server.ts",
      ],
      "sourceMaps": true,
      "outFiles": [
        "./build"
      ],
      "env": {
        "DEBUG": "app:*"
      },
      "protocol": "inspector"
    }
  ]
